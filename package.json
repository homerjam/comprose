{
  "name": "comprose",
  "version": "0.0.0",
  "description": "Compose written language in its ordinary form",
  "author": "James Homer <james@homerjam.es>",
  "license": "MIT",
  "type": "module",
  "main": "dist/comprose.js",
  "module": "dist/comprose.mjs",
  "typings": "dist/comprose.d.ts",
  "scripts": {
    "lint": "eslint src/* test/*",
    "build": "rollup -c",
    "watch": "rollup -c -w",
    "test": "ava --watch test/*.spec.js",
    "dev": "concurrently -k 'npm run watch' 'npm run test'",
    "data": "concurrently 'npm:data:*'",
    "data:compromise": "./scripts/compromise.sh"
  },
  "dependencies": {
    "lodash-es": "^4.17.21"
  },
  "devDependencies": {
    "@types/lodash-es": "^4.17.5",
    "@types/node": "^17.0.8",
    "@typescript-eslint/eslint-plugin": "^5.9.0",
    "@typescript-eslint/parser": "^5.9.0",
    "ava": "^4.0.0",
    "concurrently": "^7.0.0",
    "esbuild": "^0.14.10",
    "eslint": "^8.6.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-import-resolver-typescript": "^2.5.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-unicorn": "^40.0.0",
    "prettier": "^2.5.1",
    "rollup": "^2.63.0",
    "rollup-plugin-dts": "^4.1.0",
    "rollup-plugin-esbuild": "^4.8.2",
    "typescript": "^4.5.4"
  },
  "ava": {
    "ignoredByWatcher": [
      "*",
      "dist/**.*"
    ]
  },
  "eslintIgnore": [
    "dist/*.*",
    "src/data/**/*.js"
  ],
  "prettier": {
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  }
}